<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@color/beige"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:text="Gra w kości Autor: Daniel Pabin"
        android:textSize="27dp"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brown" />

    <Button
        android:id="@+id/rollButton"
        android:text="RZUĆ KOŚĆMI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:cornerRadius="0px"
        app:backgroundTint="@color/chocolate" />

    <GridLayout
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/kostka1"
            android:text=" ? "
            android:layout_width="60dp"
            android:layout_marginRight="9dp"
            android:layout_height="60dp"
            android:textSize="50dp"
            android:textAlignment="center"
            android:background="@color/white" />
        <TextView
            android:id="@+id/kostka2"
            android:text=" ? "
            android:layout_width="60dp"
            android:layout_marginRight="9dp"
            android:layout_height="60dp"
            android:textSize="50dp"
            android:textAlignment="center"
            android:background="@color/white" />
        <TextView
            android:id="@+id/kostka3"
            android:text=" ? "
            android:layout_width="60dp"
            android:layout_marginRight="9dp"
            android:layout_height="60dp"
            android:textSize="50dp"
            android:textAlignment="center"
            android:background="@color/white" />
        <TextView
            android:id="@+id/kostka4"
            android:text=" ? "
            android:layout_width="60dp"
            android:layout_marginRight="9dp"
            android:layout_height="60dp"
            android:textSize="50dp"
            android:textAlignment="center"
            android:background="@color/white" />
        <TextView
            android:id="@+id/kostka5"
            android:text=" ? "
            android:layout_width="60dp"
            android:layout_marginRight="9dp"
            android:layout_height="60dp"
            android:textSize="50dp"
            android:textAlignment="center"
            android:background="@color/white" />
    </GridLayout>

    <TextView
        android:id="@+id/wynikLosowania"
        android:text="Wynik tego losowania: 0"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/wynikGry"
        android:text="Wynik gry: 0"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/liczbaRzutow"
        android:text="Liczba rzutów: 0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/resetButton"
        android:text="RESETUJ WYNIK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="0px"
        android:layout_marginVertical="10dp"
        app:backgroundTint="@color/chocolate" />

</LinearLayout>